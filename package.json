{
  "name": "react-component-testing-library",
  "version": "1.0.5",
  "description": "Create unit tests for React components with JSX language",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "lib/components/*.js",
    "lib/components/*.d.ts"
  ],
  "scripts": {
    "test": "jest --watch",
    "test:once": "jest",
    "build": "tsc",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test:once",
    "gadd": "scripts/add.sh",
    "gremove": "scripts/remove.sh",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix --quiet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kneczaj/react-component-testing-library.git"
  },
  "keywords": [
    "react",
    "testing",
    "jsx",
    "component testing",
    "unit testing",
    "ui",
    "dom"
  ],
  "author": "Kamil Neczaj <kneczajdev@gmail.com> (https://www.linkedin.com/in/kamil-neczaj-750a2383/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kneczaj/react-component-testing-library/issues"
  },
  "homepage": "https://github.com/kneczaj/react-component-testing-library#readme",
  "dependencies": {},
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "jest": "^26.6.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "jest": ">= 26 < 27",
    "react": ">= 16 < 18",
    "react-dom": ">= 16 < 18"
  }
}
